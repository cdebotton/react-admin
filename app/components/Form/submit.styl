@import "nib"

.submit
  position relative
  border none
  background-color transparent
  cursor pointer
  font-size 1.1414rem
  padding 1rem
  color #333
  overflow hidden
  text-transform uppercase
  font-weight 400
  transition color 400ms ease

  &[DISABLED]
    color #ccc
    pointer default

  &::before
    content ' '
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    background-color black
    transform scaleX(4) rotateZ(45deg) translate3d(-100%, 0, 0)
    transition transform 400ms ease
    z-index -1

  &:not([disabled]):hover
    color #fff

    &::before
      transform scaleX(4) rotateZ(45deg) translate3d(0, 0, 0)

  &:active, &:focus
    outline none
