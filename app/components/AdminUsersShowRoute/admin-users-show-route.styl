@import "nib"
@import "jeet"
@import "rupture"

.admin-users-show-route
  width 100%
  display flex
  flex-flow row wrap

  h2, nav
    width 100%

  ul
    display flex
    flex-flow row wrap
    list-style none
    margin 0
    padding 0 2rem
    width 100%

    .id
      width 10%

    .email
      width 40%

    .roles
      width 30%
      display flex
      flex-flow row wrap

      .role
        padding 0.25rem 0.5rem
        color #fff
        background-color #333
        border-radius 4px
        margin 0 0.5rem 0.5rem
        font-size 1rem

    .actions
      width 20%

    lh
      font-weight 300
      font-size 2rem
      border-bottom 1px dashed #ccc
      margin-bottom 1rem

    li
      font-size 1.414rem
